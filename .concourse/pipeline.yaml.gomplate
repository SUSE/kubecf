        <<: *cleanup-cluster
    - put: kind-environments
      params: { remove : kind-environments}
{{- if has $prod (printf "smoke-tests-%s" $cfScheduler) }}
    - put: status-{{ $branch }}.src
      params:
        << : *smoke_{{ $cfScheduler }}_{{ $sanitized_branch_name }}_status
